{
  "kind": "collectionType",
  "collectionName": "sites",
  "info": {
    "singularName": "site",
    "pluralName": "sites",
    "displayName": "Site",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "pricePerPost": {
      "type": "biginteger",
      "required": true
    },
    "linkType": {
      "type": "enumeration",
      "enum": [
        "DoFollow",
        "NoFollow"
      ],
      "default": "DoFollow",
      "required": true
    },
    "maxLinksAllowed": {
      "type": "integer",
      "required": true
    },
    "wordsLimitArticle": {
      "type": "biginteger",
      "required": true
    },
    "contentPlacementPrice": {
      "type": "decimal",
      "required": true
    },
    "contentCreationPlacementPrice": {
      "type": "decimal"
    },
    "guestUrl": {
      "type": "string",
      "required": true
    },
    "specialRequirements": {
      "type": "string",
      "required": true
    },
    "deliveryTime": {
      "type": "string"
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "sites"
    },
    "mobileLanguage": {
      "type": "enumeration",
      "enum": [
        "English",
        "Spanish",
        "French",
        "German"
      ],
      "required": true,
      "default": "English"
    },
    "sponsoredContent": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "categories": {
      "type": "string",
      "required": true
    },
    "status_site": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::status-site.status-site",
      "mappedBy": "site"
    }
  }
}
